rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // ============================================
    // üîê FUN√á√ïES AUXILIARES
    // ============================================
    
    /// Verifica se o usu√°rio est√° autenticado
    function isAuthenticated() {
      return request.auth != null;
    }
    
    /// Verifica se √© o pr√≥prio usu√°rio
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    /// Valida tamanho m√°ximo do arquivo (em MB)
    function isUnderSizeLimit(sizeMB) {
      return request.resource.size < sizeMB * 1024 * 1024;
    }
    
    /// Valida tipo de imagem
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    /// Valida tipo de v√≠deo
    function isVideo() {
      return request.resource.contentType.matches('video/.*');
    }
    
    /// Valida tipo de documento
    function isDocument() {
      return request.resource.contentType.matches('application/pdf') ||
             request.resource.contentType.matches('application/vnd.ms-excel') ||
             request.resource.contentType.matches('application/vnd.openxmlformats-officedocument.spreadsheetml.sheet') ||
             request.resource.contentType.matches('text/csv');
    }
    
    // ============================================
    // üë§ USER UPLOADS
    // ============================================
    
    /// Fotos de perfil dos usu√°rios
    match /users/{userId}/profile/{fileName} {
      // Leitura: autenticado
      allow read: if isAuthenticated();
      
      // Escrita: apenas o pr√≥prio usu√°rio, imagens at√© 5MB
      allow write: if isOwner(userId) && 
                     isImage() && 
                     isUnderSizeLimit(5);
      
      // Dele√ß√£o: apenas o pr√≥prio usu√°rio
      allow delete: if isOwner(userId);
    }
    
    /// Documentos e arquivos gerais do usu√°rio
    match /users/{userId}/documents/{fileName} {
      // Leitura e escrita: apenas o pr√≥prio usu√°rio
      allow read, write: if isOwner(userId) && 
                           isDocument() && 
                           isUnderSizeLimit(10);
      
      // Dele√ß√£o: apenas o pr√≥prio usu√°rio
      allow delete: if isOwner(userId);
    }
    
    // ============================================
    // üè¢ CLIENT UPLOADS
    // ============================================
    
    /// Logos e imagens dos clientes
    match /clients/{clientId}/images/{fileName} {
      // Leitura: autenticado
      allow read: if isAuthenticated();
      
      // Escrita: imagens at√© 5MB
      allow write: if isAuthenticated() && 
                     isImage() && 
                     isUnderSizeLimit(5);
      
      // Dele√ß√£o: autenticado
      allow delete: if isAuthenticated();
    }
    
    /// Documentos dos clientes (contratos, etc)
    match /clients/{clientId}/documents/{fileName} {
      // Leitura e escrita: autenticado, documentos at√© 20MB
      allow read, write: if isAuthenticated() && 
                           isDocument() && 
                           isUnderSizeLimit(20);
      
      // Dele√ß√£o: autenticado
      allow delete: if isAuthenticated();
    }
    
    // ============================================
    // üì¢ CAMPAIGN UPLOADS
    // ============================================
    
    /// Criativos das campanhas (imagens)
    match /campaigns/{campaignId}/creatives/images/{fileName} {
      // Leitura: autenticado
      allow read: if isAuthenticated();
      
      // Escrita: imagens at√© 10MB
      allow write: if isAuthenticated() && 
                     isImage() && 
                     isUnderSizeLimit(10);
      
      // Dele√ß√£o: autenticado
      allow delete: if isAuthenticated();
    }
    
    /// Criativos das campanhas (v√≠deos)
    match /campaigns/{campaignId}/creatives/videos/{fileName} {
      // Leitura: autenticado
      allow read: if isAuthenticated();
      
      // Escrita: v√≠deos at√© 50MB
      allow write: if isAuthenticated() && 
                     isVideo() && 
                     isUnderSizeLimit(50);
      
      // Dele√ß√£o: autenticado
      allow delete: if isAuthenticated();
    }
    
    /// Relat√≥rios e documentos das campanhas
    match /campaigns/{campaignId}/reports/{fileName} {
      // Leitura e escrita: autenticado, documentos at√© 15MB
      allow read, write: if isAuthenticated() && 
                           isDocument() && 
                           isUnderSizeLimit(15);
      
      // Dele√ß√£o: autenticado
      allow delete: if isAuthenticated();
    }
    
    // ============================================
    // üìä ANALYTICS EXPORTS
    // ============================================
    
    /// Exports e relat√≥rios gerados
    match /exports/{userId}/{fileName} {
      // Leitura: apenas o pr√≥prio usu√°rio
      allow read: if isOwner(userId);
      
      // Escrita: n√£o permitida pelo app (gerado por Cloud Functions)
      allow write: if false;
      
      // Dele√ß√£o: apenas o pr√≥prio usu√°rio
      allow delete: if isOwner(userId);
    }
    
    // ============================================
    // üóÇÔ∏è TEMPORARY UPLOADS
    // ============================================
    
    /// Uploads tempor√°rios (processamento, etc)
    match /temp/{userId}/{fileName} {
      // Leitura e escrita: apenas o pr√≥prio usu√°rio
      allow read, write: if isOwner(userId) && 
                           isUnderSizeLimit(50);
      
      // Dele√ß√£o: apenas o pr√≥prio usu√°rio ou ap√≥s 24h (via Cloud Functions)
      allow delete: if isOwner(userId);
    }
    
    // ============================================
    // üö´ REGRA PADR√ÉO: NEGAR TUDO
    // ============================================
    
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
